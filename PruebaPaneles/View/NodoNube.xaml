<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="PruebaPaneles.View.NodoNube"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Width="150" Height="150">
    
    <Grid x:Name="LayoutRoot">

    	<ed:Callout x:Name="nube" AnchorPoint="0,1.5" CalloutStyle="Cloud" FontSize="14.666999816894531" Margin="0,0,10,10" Stroke="Black" Width="140" Height="140" Fill="#FFFFFDFD">
    		<ed:Callout.Effect>
    			<DropShadowEffect/>
    		</ed:Callout.Effect>
    	</ed:Callout>
    	<TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Margin="4,59,0,67" Width="125" Height="24" BorderThickness="0" Background="{x:Null}" FontFamily="Arial Black" FontWeight="Bold" FontSize="12" TextAlignment="Center" HorizontalScrollBarVisibility="Auto"/>
    	<Viewbox Height="30" Width="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,25,0,0"/>
    	<Viewbox Height="30" VerticalAlignment="Top" Margin="72,25,48,0"/>
    	<Button Content="Button" Height="30" Width="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="30,0,0,33"/>
    	<Button Content="Button" Height="30" VerticalAlignment="Bottom" Margin="72,0,48,33"/>

    </Grid>
</UserControl>
